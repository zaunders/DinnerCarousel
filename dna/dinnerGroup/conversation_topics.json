{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "topics"
  ],
  "properties": {
    "topics": {
      "$id": "#/properties/topics",
      "type": "array",
      "title": "The Topics Schema",
      "items": {
        "$id": "#/properties/topics/items",
        "type": "string",
        "title": "The Items Schema",
        "default": "",
        "examples": [
          "politics",
          "gender"
        ],
        "pattern": "^(.*)$"
      }
    }
  }
}